
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="DrinksController">
    <div class="row form-group product-chooser col-md-8 col-sm-8 col-xs-8">
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4" ng-repeat="drink in Drinks">
            <div class="product-chooser-item-h" ng-click="selectItem(drink)" ng-class="{'selected': selectedItem === drink, 'disabled': drink.cost > amountPaid || drink.count <= 0 }">
                <img src="{{drink.picture}}" class="img-rounded col-xs-4 col-sm-4 col-md-12 col-lg-12" alt="...">
                <div class="col-xs-8 col-sm-8 col-md-12 col-lg-12">
                    <span class="title" ng-bind="drink.name + '-' + drink.cost + 'к'"></span>
                    <span class="title" ng-bind="drink.count + ' шт.'"></span>
                    <input type="radio" name="product" value="">
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>

    <div class="row col-md-4 col-sm-4 col-xs-4 coins-row">
        <span class="label label-default coins-paid" ng-bind="amountPaid + 'к'" ng-click="getAmountPaid()"></span>
        <div class="row coins-row">
            <button type="button" class="btn btn-warning btn-circle btn-lg" ng-class="{'disabled': naminal.canUse===false}" ng-repeat="naminal in naminals" ng-bind="naminal.num" ng-click="paid(naminal)"></button>
        </div>
        <div class="row coins-row">
            <button type="button" class="btn btn-primary btn-lg" ng-class="{'disabled': amountPaid === 0}" ng-click="takechange()">Забрать сдачу</button>
            <button type="button" class="btn btn-success btn-lg" ng-class="{'disabled': selectedItem===null}" ng-click="buy()">Купить</button>

        </div>
        <div class="row coins-row" ng-show="changeinfo.length > 0">
            <div class="row change" ng-repeat="change in changeinfo">
                <span ng-bind="change"></span>
            </div>
        </div>
    </div>
</div>